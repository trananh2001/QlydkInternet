@model QlydkInternet.ViewModels.GoiCuocViewModel
@{
    ViewData["Title"] = "Chi tiết gói cước";
}

@section menu{
  
}

<h2>Chi tiết gói cước</h2>

<div class="ui centered grid equal width" style="width:100%;">
    <div class="sixteen wide column">
        <h3 class="ui dividing teal header"></h3>
    </div>
    <div class="row">
        <div class="column">
            <h3 class="ui dividing header">
                Mã gói cước
                <div class="sub header" style="font-size:2rem">@Model.magc</div>
            </h3>
        </div>
        <div class="column">
            <h3 class="ui dividing header">
                Tên gói cước
                <div class="sub header" style="font-size:2rem">@Model.tengc</div>
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="column" id="tenkhachhang">
            <h3 class="ui dividing header">
                Loại gói cước
                <div class="sub header" style="font-size:2rem">@Model.tenloaigc</div>
            </h3>
        </div>
        <div class="column" id="tenncc">
            <h3 class="ui dividing header">
                Tốc độ
                <div class="sub header" style="font-size:2rem">@Model.tocdo</div>
            </h3>
        </div>

    </div>
    <div class="row">
        <div class="column">
            <h3 class="ui dividing header">
                Giá cước
                <div class="sub header" style="font-size:2rem">@(((int)Model.giacuoc).ToString("N0") + " ₫")</div>
            </h3>
        </div>
        <div class="column">
            <h3 class="ui dividing header">

                Mô tả
                <div class="sub header" style="font-size:2rem">@Model.mota</div>
                @*<div class="ui transparent fluid disabled input">
                        <input type="text" style="font-size:2rem" placeholder="Search...">
                    </div>*@
            </h3>
        </div>
    </div>
</div>
<form class="ui form" asp-controller="GoiCuoc" asp-action="Update" method="get" id="createform" style="width:100%">
    <input class="prompt"
           type="hidden"
           asp-for="@Model.magc"
           placeholder="Tên gói cước"
           value="@Model.magc">
    <div class="ui center aligned segment" style="border:none; box-shadow:none">
        <button class="ui primary submit toggle button" type="submit" id="btnThem" style="width:11%">Chỉnh sửa</button>
        <div class="ui reset toggle button" id="btnXoa" style="width:11%">Quay lại</div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $("#btnXoa").on("click", function () {
            var url = '@Url.Action("Index","GoiCuoc")';
            window.location = url;
        })
        $("#qlgc").addClass("ui active");
    })
</script>

